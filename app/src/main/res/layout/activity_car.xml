<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MyCarActivity">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MyCarActivity">

        <TextView
            android:id="@+id/description_model"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="@string/describe_new_car"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/title_model_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/description_model" />

        <EditText
            android:id="@+id/title_model_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="true"
            app:layout_constraintTop_toBottomOf="@id/title_model_text_view" />

        <TextView
            android:id="@+id/mark_model_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/title_model_edit_text" />

        <EditText
            android:id="@+id/mark_model_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="true"
            app:layout_constraintTop_toBottomOf="@id/mark_model_text_view" />

        <TextView
            android:id="@+id/cost_model_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cost, $"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/mark_model_edit_text" />

        <EditText
            android:id="@+id/cost_model_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="true"
            app:layout_constraintTop_toBottomOf="@id/cost_model_text_view" />

        <TextView
            android:id="@+id/power_model_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Power"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/cost_model_edit_text" />

        <EditText
            android:id="@+id/power_model_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="true"
            app:layout_constraintTop_toBottomOf="@id/power_model_text_view" />

        <TextView
            android:id="@+id/doors_number_model_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Number of doors"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/power_model_edit_text" />

        <EditText
            android:id="@+id/doors_number_model_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="true"
            app:layout_constraintTop_toBottomOf="@id/doors_number_model_text_view" />

        <TextView
            android:id="@+id/body_type_model_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Body type"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/doors_number_model_edit_text" />

        <EditText
            android:id="@+id/body_type_model_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="true"
            app:layout_constraintTop_toBottomOf="@id/body_type_model_text_view" />

        <TextView
            android:id="@+id/seats_number_model_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Number of seats"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/body_type_model_edit_text" />

        <EditText
            android:id="@+id/seats_number_model_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="true"
            app:layout_constraintTop_toBottomOf="@id/seats_number_model_text_view" />

        <TextView
            android:id="@+id/start_release_model_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start release"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/seats_number_model_edit_text" />

        <EditText
            android:id="@+id/start_release_model_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="true"
            app:layout_constraintTop_toBottomOf="@id/start_release_model_text_view" />

        <TextView
            android:id="@+id/end_release_model_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End release"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/start_release_model_edit_text" />

        <EditText
            android:id="@+id/end_release_model_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="true"
            app:layout_constraintTop_toBottomOf="@id/end_release_model_text_view" />


        <LinearLayout
            android:id="@+id/photo_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/end_release_model_edit_text">

            <ImageView
                android:id="@+id/crime_photo"
                android:layout_width="120dp"
                android:layout_height="85dp"
                android:background="@android:color/darker_gray"
                android:cropToPadding="true"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/crime_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_camera" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</ScrollView>